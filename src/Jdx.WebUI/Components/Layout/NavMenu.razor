@rendermode InteractiveServer
@inject NavigationManager Navigation

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand mb-0" href="">JumboDogX</a>
    </div>
</div>

<div class="nav-scrollable">
    <nav class="nav flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span>
                <span class="nav-text">Dashboard</span>
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="logs">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span>
                <span class="nav-text">Logs</span>
            </NavLink>
        </div>

        <!-- Settings with submenu -->
        <div class="nav-item px-3">
            <div class="nav-link submenu-toggle" @onclick="ToggleSettings" @onclick:stopPropagation="true">
                <span class="bi bi-gear-fill-nav-menu" aria-hidden="true"></span>
                <span class="nav-text">Settings</span>
                <span class="submenu-arrow @(settingsExpanded ? "expanded" : "")">▼</span>
            </div>

            @if (settingsExpanded)
            {
                <div class="submenu" @onclick:stopPropagation="true">
                    <!-- HTTP/HTTPS -->
                    <div class="submenu-section">
                        <div class="submenu-header" @onclick="ToggleHttp" @onclick:stopPropagation="true">
                            <span class="submenu-title">HTTP/HTTPS</span>
                            <span class="submenu-arrow @(httpExpanded ? "expanded" : "")">▼</span>
                        </div>
                        @if (httpExpanded)
                        {
                            <div class="submenu-items">
                                <NavLink class="nav-link submenu-item" href="settings/http/general">General</NavLink>
                                <NavLink class="nav-link submenu-item" href="settings/http/document">Document</NavLink>
                                <NavLink class="nav-link submenu-item" href="settings/http/cgi">CGI</NavLink>
                                <NavLink class="nav-link submenu-item" href="settings/http/ssi">SSI</NavLink>
                                <NavLink class="nav-link submenu-item" href="settings/http/webdav">WebDAV</NavLink>
                                <NavLink class="nav-link submenu-item" href="settings/http/alias-mime">Alias & MIME</NavLink>
                                <NavLink class="nav-link submenu-item" href="settings/http/authentication">Authentication</NavLink>
                                <NavLink class="nav-link submenu-item" href="settings/http/template">Template</NavLink>
                            </div>
                        }
                    </div>

                    <!-- DNS -->
                    <div class="submenu-section">
                        <div class="submenu-header" @onclick="ToggleDns" @onclick:stopPropagation="true">
                            <span class="submenu-title">DNS</span>
                            <span class="submenu-arrow @(dnsExpanded ? "expanded" : "")">▼</span>
                        </div>
                        @if (dnsExpanded)
                        {
                            <div class="submenu-items">
                                <NavLink class="nav-link submenu-item" href="settings/dns/general">General</NavLink>
                                <NavLink class="nav-link submenu-item" href="settings/dns/records">Records</NavLink>
                            </div>
                        }
                    </div>

                    <!-- Logging -->
                    <div class="submenu-section">
                        <NavLink class="nav-link submenu-item" href="settings/logging">
                            <span class="submenu-title">Logging</span>
                        </NavLink>
                    </div>
                </div>
            }
        </div>
    </nav>
</div>

@code {
    private bool settingsExpanded = false;
    private bool httpExpanded = false;
    private bool dnsExpanded = false;

    protected override void OnInitialized()
    {
        // 現在のURLに基づいて適切なメニューを展開
        var currentPath = Navigation.ToBaseRelativePath(Navigation.Uri);
        if (currentPath.StartsWith("settings/"))
        {
            settingsExpanded = true;
            if (currentPath.StartsWith("settings/http/"))
            {
                httpExpanded = true;
            }
            else if (currentPath.StartsWith("settings/dns/"))
            {
                dnsExpanded = true;
            }
        }
    }

    private void ToggleSettings()
    {
        settingsExpanded = !settingsExpanded;
    }

    private void ToggleHttp()
    {
        httpExpanded = !httpExpanded;
    }

    private void ToggleDns()
    {
        dnsExpanded = !dnsExpanded;
    }
}
