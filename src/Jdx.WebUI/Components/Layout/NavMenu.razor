@rendermode InteractiveServer
@using Jdx.Core.Settings
@using Jdx.WebUI.Services
@inject NavigationManager Navigation
@inject ISettingsService SettingsService
@implements IDisposable

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand mb-0" href="">JumboDogX</a>
    </div>
</div>

<div class="nav-scrollable">
    <nav class="nav flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span>
                <span class="nav-text">Dashboard</span>
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="logs">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span>
                <span class="nav-text">Logs</span>
            </NavLink>
        </div>

        <!-- Settings with submenu -->
        <div class="nav-item px-3">
            <div class="nav-link submenu-toggle" @onclick="ToggleSettings" @onclick:stopPropagation="true">
                <span class="bi bi-gear-fill-nav-menu" aria-hidden="true"></span>
                <span class="nav-text">Settings</span>
                <span class="submenu-arrow @(settingsExpanded ? "expanded" : "")">▼</span>
            </div>

            @if (settingsExpanded)
            {
                <div class="submenu" @onclick:stopPropagation="true">
                    <!-- HTTP/HTTPS -->
                    <div class="submenu-section">
                        <div class="submenu-header" @onclick="ToggleHttp" @onclick:stopPropagation="true">
                            <span class="submenu-title">HTTP/HTTPS</span>
                            <span class="submenu-arrow @(httpExpanded ? "expanded" : "")">▼</span>
                        </div>
                        @if (httpExpanded)
                        {
                            <div class="submenu-items">
                                <NavLink class="nav-link submenu-item" href="settings/http/virtualhost">Virtual Hosts</NavLink>

                                @if (virtualHosts != null && virtualHosts.Count > 0)
                                {
                                    <!-- Virtual Hosts with individual settings -->
                                    @foreach (var (vhost, index) in virtualHosts.Select((v, i) => (v, i)))
                                    {
                                        var vhostId = index.ToString();
                                        var hostName = vhost.GetHostName();
                                        var displayName = string.IsNullOrEmpty(hostName) ? $"Virtual Host #{index + 1}" : hostName;
                                        var isVhostExpanded = virtualHostExpandedStates.ContainsKey(vhostId) && virtualHostExpandedStates[vhostId];

                                        <div class="submenu-subsection">
                                            <div class="submenu-subheader" @onclick="() => ToggleVirtualHost(vhostId)" @onclick:stopPropagation="true">
                                                <span class="submenu-subtitle">@displayName</span>
                                                <span class="submenu-arrow @(isVhostExpanded ? "expanded" : "")">▼</span>
                                            </div>
                                            @if (isVhostExpanded)
                                            {
                                                <div class="submenu-subitems">
                                                    <NavLink class="nav-link submenu-subitem" href="@($"settings/http/{vhostId}/general")">General</NavLink>
                                                    <NavLink class="nav-link submenu-subitem" href="@($"settings/http/{vhostId}/document")">Document</NavLink>
                                                    <NavLink class="nav-link submenu-subitem" href="@($"settings/http/{vhostId}/cgi")">CGI</NavLink>
                                                    <NavLink class="nav-link submenu-subitem" href="@($"settings/http/{vhostId}/ssi")">SSI</NavLink>
                                                    <NavLink class="nav-link submenu-subitem" href="@($"settings/http/{vhostId}/webdav")">WebDAV</NavLink>
                                                    <NavLink class="nav-link submenu-subitem" href="@($"settings/http/{vhostId}/alias-mime")">Alias & MIME</NavLink>
                                                    <NavLink class="nav-link submenu-subitem" href="@($"settings/http/{vhostId}/authentication")">Authentication</NavLink>
                                                    <NavLink class="nav-link submenu-subitem" href="@($"settings/http/{vhostId}/template")">Template</NavLink>
                                                    <NavLink class="nav-link submenu-subitem" href="@($"settings/http/{vhostId}/acl")">ACL</NavLink>
                                                    <NavLink class="nav-link submenu-subitem" href="@($"settings/http/{vhostId}/ssl")">SSL/TLS</NavLink>
                                                    <NavLink class="nav-link submenu-subitem" href="@($"settings/http/{vhostId}/advanced")">Advanced</NavLink>
                                                </div>
                                            }
                                        </div>
                                    }
                                }
                            </div>
                        }
                    </div>

                    <!-- FTP -->
                    <div class="submenu-section">
                        <div class="submenu-header" @onclick="ToggleFtp" @onclick:stopPropagation="true">
                            <span class="submenu-title">FTP</span>
                            <span class="submenu-arrow @(ftpExpanded ? "expanded" : "")">▼</span>
                        </div>
                        @if (ftpExpanded)
                        {
                            <div class="submenu-items">
                                <NavLink class="nav-link submenu-item" href="settings/ftp/general">General</NavLink>
                                <NavLink class="nav-link submenu-item" href="settings/ftp/virtualfolder">Virtual Folder</NavLink>
                                <NavLink class="nav-link submenu-item" href="settings/ftp/user">User</NavLink>
                                <NavLink class="nav-link submenu-item" href="settings/ftp/acl">ACL</NavLink>
                            </div>
                        }
                    </div>

                    <!-- DNS -->
                    <div class="submenu-section">
                        <div class="submenu-header" @onclick="ToggleDns" @onclick:stopPropagation="true">
                            <span class="submenu-title">DNS</span>
                            <span class="submenu-arrow @(dnsExpanded ? "expanded" : "")">▼</span>
                        </div>
                        @if (dnsExpanded)
                        {
                            <div class="submenu-items">
                                <NavLink class="nav-link submenu-item" href="settings/dns/general">General</NavLink>
                                <NavLink class="nav-link submenu-item" href="settings/dns/domains">Domains</NavLink>
                                <NavLink class="nav-link submenu-item" href="settings/dns/resources">Resources</NavLink>
                                <NavLink class="nav-link submenu-item" href="settings/dns/acl">ACL</NavLink>
                            </div>
                        }
                    </div>

                    <!-- TFTP -->
                    <div class="submenu-section">
                        <div class="submenu-header" @onclick="ToggleTftp" @onclick:stopPropagation="true">
                            <span class="submenu-title">TFTP</span>
                            <span class="submenu-arrow @(tftpExpanded ? "expanded" : "")">▼</span>
                        </div>
                        @if (tftpExpanded)
                        {
                            <div class="submenu-items">
                                <NavLink class="nav-link submenu-item" href="settings/tftp/general">General</NavLink>
                                <NavLink class="nav-link submenu-item" href="settings/tftp/acl">ACL</NavLink>
                            </div>
                        }
                    </div>

                    <!-- DHCP -->
                    <div class="submenu-section">
                        <div class="submenu-header" @onclick="ToggleDhcp" @onclick:stopPropagation="true">
                            <span class="submenu-title">DHCP</span>
                            <span class="submenu-arrow @(dhcpExpanded ? "expanded" : "")">▼</span>
                        </div>
                        @if (dhcpExpanded)
                        {
                            <div class="submenu-items">
                                <NavLink class="nav-link submenu-item" href="settings/dhcp/general">General</NavLink>
                                <NavLink class="nav-link submenu-item" href="settings/dhcp/macacl">MAC ACL</NavLink>
                            </div>
                        }
                    </div>

                    <!-- POP3 -->
                    <div class="submenu-section">
                        <div class="submenu-header" @onclick="TogglePop3" @onclick:stopPropagation="true">
                            <span class="submenu-title">POP3</span>
                            <span class="submenu-arrow @(pop3Expanded ? "expanded" : "")">▼</span>
                        </div>
                        @if (pop3Expanded)
                        {
                            <div class="submenu-items">
                                <NavLink class="nav-link submenu-item" href="settings/pop3/general">General</NavLink>
                                <NavLink class="nav-link submenu-item" href="settings/pop3/changepassword">Change Password</NavLink>
                                <NavLink class="nav-link submenu-item" href="settings/pop3/autodeny">Auto Deny</NavLink>
                                <NavLink class="nav-link submenu-item" href="settings/pop3/acl">ACL</NavLink>
                            </div>
                        }
                    </div>

                    <!-- SMTP -->
                    <div class="submenu-section">
                        <div class="submenu-header" @onclick="ToggleSmtp" @onclick:stopPropagation="true">
                            <span class="submenu-title">SMTP</span>
                            <span class="submenu-arrow @(smtpExpanded ? "expanded" : "")">▼</span>
                        </div>
                        @if (smtpExpanded)
                        {
                            <div class="submenu-items">
                                <NavLink class="nav-link submenu-item" href="settings/smtp/general">General</NavLink>
                                <NavLink class="nav-link submenu-item" href="settings/smtp/esmtp">ESMTP</NavLink>
                                <NavLink class="nav-link submenu-item" href="settings/smtp/relay">Relay</NavLink>
                                <NavLink class="nav-link submenu-item" href="settings/smtp/queue">Queue</NavLink>
                                <NavLink class="nav-link submenu-item" href="settings/smtp/host">Host</NavLink>
                                <NavLink class="nav-link submenu-item" href="settings/smtp/header">Header</NavLink>
                                <NavLink class="nav-link submenu-item" href="settings/smtp/aliases">Aliases</NavLink>
                                <NavLink class="nav-link submenu-item" href="settings/smtp/autoreception">Auto Reception</NavLink>
                                <NavLink class="nav-link submenu-item" href="settings/smtp/acl">ACL</NavLink>
                            </div>
                        }
                    </div>

                    <!-- Logging -->
                    <div class="submenu-section">
                        <NavLink class="nav-link submenu-item" href="settings/logging">
                            <span class="submenu-title">Logging</span>
                        </NavLink>
                    </div>

                    <!-- Backup -->
                    <div class="submenu-section">
                        <NavLink class="nav-link submenu-item" href="settings/backup">
                            <span class="submenu-title">Backup & Restore</span>
                        </NavLink>
                    </div>
                </div>
            }
        </div>
    </nav>
</div>

@code {
    private bool settingsExpanded = false;
    private bool httpExpanded = false;
    private bool ftpExpanded = false;
    private bool dnsExpanded = false;
    private bool tftpExpanded = false;
    private bool dhcpExpanded = false;
    private bool pop3Expanded = false;
    private bool smtpExpanded = false;

    private List<VirtualHostEntry>? virtualHosts;
    private Dictionary<string, bool> virtualHostExpandedStates = new();

    protected override void OnInitialized()
    {
        // Load Virtual Hosts from settings
        LoadVirtualHosts();

        // Subscribe to settings changes
        SettingsService.SettingsChanged += OnSettingsChanged;

        // 現在のURLに基づいて適切なメニューを展開
        var currentPath = Navigation.ToBaseRelativePath(Navigation.Uri);
        if (currentPath.StartsWith("settings/"))
        {
            settingsExpanded = true;
            if (currentPath.StartsWith("settings/http/"))
            {
                httpExpanded = true;

                // Check if URL matches a Virtual Host path pattern
                var parts = currentPath.Split('/');
                if (parts.Length >= 3 && int.TryParse(parts[2], out var vhostIndex))
                {
                    // URL is like settings/http/0/general - expand that Virtual Host
                    virtualHostExpandedStates[vhostIndex.ToString()] = true;
                }
            }
            else if (currentPath.StartsWith("settings/ftp/"))
            {
                ftpExpanded = true;
            }
            else if (currentPath.StartsWith("settings/dns/"))
            {
                dnsExpanded = true;
            }
            else if (currentPath.StartsWith("settings/tftp/"))
            {
                tftpExpanded = true;
            }
            else if (currentPath.StartsWith("settings/dhcp/"))
            {
                dhcpExpanded = true;
            }
            else if (currentPath.StartsWith("settings/pop3/"))
            {
                pop3Expanded = true;
            }
            else if (currentPath.StartsWith("settings/smtp/"))
            {
                smtpExpanded = true;
            }
        }
    }

    private void LoadVirtualHosts()
    {
        var settings = SettingsService.GetSettings();
        virtualHosts = settings.HttpServer.VirtualHosts;
    }

    private void OnSettingsChanged(object? sender, ApplicationSettings settings)
    {
        InvokeAsync(() =>
        {
            virtualHosts = settings.HttpServer.VirtualHosts;
            StateHasChanged();
        });
    }

    public void Dispose()
    {
        SettingsService.SettingsChanged -= OnSettingsChanged;
    }

    private void ToggleSettings()
    {
        settingsExpanded = !settingsExpanded;
    }

    private void ToggleHttp()
    {
        httpExpanded = !httpExpanded;
    }

    private void ToggleFtp()
    {
        ftpExpanded = !ftpExpanded;
    }

    private void ToggleDns()
    {
        dnsExpanded = !dnsExpanded;
    }

    private void ToggleTftp()
    {
        tftpExpanded = !tftpExpanded;
    }

    private void ToggleDhcp()
    {
        dhcpExpanded = !dhcpExpanded;
    }

    private void TogglePop3()
    {
        pop3Expanded = !pop3Expanded;
    }

    private void ToggleSmtp()
    {
        smtpExpanded = !smtpExpanded;
    }

    private void ToggleVirtualHost(string vhostId)
    {
        if (virtualHostExpandedStates.ContainsKey(vhostId))
        {
            virtualHostExpandedStates[vhostId] = !virtualHostExpandedStates[vhostId];
        }
        else
        {
            virtualHostExpandedStates[vhostId] = true;
        }
    }
}
