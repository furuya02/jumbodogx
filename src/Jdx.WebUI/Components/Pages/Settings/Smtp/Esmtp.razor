@page "/settings/smtp/esmtp"
@rendermode InteractiveServer
@using Jdx.Core.Settings
@using Jdx.WebUI.Services
@inject ISettingsService SettingsService

<PageTitle>SMTP ESMTP Settings - JumboDogX</PageTitle>

<h1>SMTP - ESMTP Authentication</h1>

@if (saveMessage != null)
{
    <div class="alert @(saveSuccess ? "alert-success" : "alert-danger") alert-dismissible fade show" role="alert">
        @saveMessage
        <button type="button" class="btn-close" @onclick="() => saveMessage = null"></button>
    </div>
}

<div class="row">
    <div class="col-md-12">
        <!-- ESMTPË®≠ÂÆö -->
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0">üîê ESMTP (Extended SMTP) Settings</h5>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" id="useEsmtp"
                               @bind="settings.SmtpServer.UseEsmtp">
                        <label class="form-check-label" for="useEsmtp">
                            <strong>Enable ESMTP</strong>
                        </label>
                    </div>
                    <div class="form-text">
                        Enable Extended SMTP with authentication support (RFC 4954)
                    </div>
                </div>

                @if (settings.SmtpServer.UseEsmtp)
                {
                    <hr />

                    <h6 class="mt-3 mb-3">Authentication Mechanisms</h6>

                    <div class="alert alert-info mb-3">
                        <strong>ESMTP Authentication:</strong>
                        Select which authentication mechanisms to support. Clients will advertise these in EHLO response.
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-4">
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" id="useAuthCramMd5"
                                       @bind="settings.SmtpServer.UseAuthCramMd5">
                                <label class="form-check-label" for="useAuthCramMd5">
                                    <strong>CRAM-MD5</strong>
                                </label>
                            </div>
                            <div class="form-text">Challenge-Response Authentication (most secure)</div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" id="useAuthPlain"
                                       @bind="settings.SmtpServer.UseAuthPlain">
                                <label class="form-check-label" for="useAuthPlain">
                                    <strong>PLAIN</strong>
                                </label>
                            </div>
                            <div class="form-text">Base64 encoded username/password</div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" id="useAuthLogin"
                                       @bind="settings.SmtpServer.UseAuthLogin">
                                <label class="form-check-label" for="useAuthLogin">
                                    <strong>LOGIN</strong>
                                </label>
                            </div>
                            <div class="form-text">Legacy authentication method</div>
                        </div>
                    </div>

                    <hr />

                    <h6 class="mt-3 mb-3">User Account Source</h6>

                    <div class="row mb-3">
                        <div class="col-md-12">
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" id="usePopAccount"
                                       @bind="settings.SmtpServer.UsePopAccount">
                                <label class="form-check-label" for="usePopAccount">
                                    <strong>Use POP3 Accounts</strong>
                                </label>
                            </div>
                            <div class="form-text">
                                Use POP3 server user accounts for SMTP authentication instead of separate SMTP accounts
                            </div>
                        </div>
                    </div>

                    @if (!settings.SmtpServer.UsePopAccount)
                    {
                        <hr />

                        <h6 class="mt-3 mb-3">ESMTP User Accounts</h6>

                        <table class="table table-bordered">
                            <thead class="table-light">
                                <tr>
                                    <th style="width: 40%">Username</th>
                                    <th style="width: 45%">Password</th>
                                    <th style="width: 15%">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (!settings.SmtpServer.EsmtpUserList.Any())
                                {
                                    <tr>
                                        <td colspan="3" class="text-center text-muted">
                                            No user accounts defined. Click "Add User" to add one.
                                        </td>
                                    </tr>
                                }
                                else
                                {
                                    @foreach (var (user, index) in settings.SmtpServer.EsmtpUserList.Select((u, i) => (u, i)))
                                    {
                                        <tr>
                                            <td>
                                                <input type="text" class="form-control" @bind="user.UserName"
                                                       placeholder="username">
                                            </td>
                                            <td>
                                                <input type="password" class="form-control" @bind="user.Password"
                                                       placeholder="password (will be encrypted)">
                                            </td>
                                            <td>
                                                <button class="btn btn-sm btn-danger" @onclick="() => RemoveUser(index)">
                                                    Remove
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>

                        <button class="btn btn-success btn-sm mt-2" @onclick="AddUser">
                            + Add User
                        </button>
                    }

                    <hr />

                    <h6 class="mt-3 mb-3">ESMTP Restriction by IP Range</h6>

                    <div class="mb-3">
                        <label class="form-label"><strong>ESMTP Requirement Mode</strong></label>
                        <select class="form-select" @bind="settings.SmtpServer.EnableEsmtp">
                            <option value="0">Require ESMTP for all connections</option>
                            <option value="1">Exempt listed IP ranges from ESMTP requirement</option>
                        </select>
                        <div class="form-text">
                            @if (settings.SmtpServer.EnableEsmtp == 0)
                            {
                                <span>All clients must authenticate via ESMTP</span>
                            }
                            else
                            {
                                <span>Listed IP ranges can send without ESMTP authentication</span>
                            }
                        </div>
                    </div>

                    <table class="table table-bordered">
                        <thead class="table-light">
                            <tr>
                                <th style="width: 70%">IP Address / Network</th>
                                <th style="width: 30%">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (!settings.SmtpServer.RangeList.Any())
                            {
                                <tr>
                                    <td colspan="2" class="text-center text-muted">
                                        No IP ranges defined. All clients will require ESMTP authentication.
                                    </td>
                                </tr>
                            }
                            else
                            {
                                @foreach (var (range, index) in settings.SmtpServer.RangeList.Select((r, i) => (r, i)))
                                {
                                    <tr>
                                        <td>
                                            <input type="text" class="form-control" @bind="range.Address"
                                                   placeholder="192.168.1.0/24">
                                            <small class="form-text text-muted">
                                                Single IP: 192.168.1.100 | CIDR: 192.168.1.0/24
                                            </small>
                                        </td>
                                        <td>
                                            <button class="btn btn-sm btn-danger" @onclick="() => RemoveRange(index)">
                                                Remove
                                            </button>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>

                    <button class="btn btn-success btn-sm mt-2" @onclick="AddRange">
                        + Add IP Range
                    </button>
                }
                else
                {
                    <div class="alert alert-secondary mt-3">
                        <strong>ESMTP is currently disabled.</strong>
                        Enable it to require authentication for SMTP connections.
                    </div>
                }

                <div class="border-top pt-3 mt-4">
                    <button class="btn btn-primary me-2" @onclick="SaveSettings">
                        Save Settings
                    </button>
                    <button class="btn btn-secondary" @onclick="AddLocalRange">
                        Add Local Network Range
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private ApplicationSettings settings = new();
    private string? saveMessage;
    private bool saveSuccess;

    protected override void OnInitialized()
    {
        settings = SettingsService.GetSettings();
    }

    private void AddUser()
    {
        settings.SmtpServer.EsmtpUserList.Add(new SmtpUserEntry
        {
            UserName = "",
            Password = ""
        });
    }

    private void RemoveUser(int index)
    {
        if (index >= 0 && index < settings.SmtpServer.EsmtpUserList.Count)
        {
            settings.SmtpServer.EsmtpUserList.RemoveAt(index);
        }
    }

    private void AddRange()
    {
        settings.SmtpServer.RangeList.Add(new SmtpRangeEntry
        {
            Address = ""
        });
    }

    private void RemoveRange(int index)
    {
        if (index >= 0 && index < settings.SmtpServer.RangeList.Count)
        {
            settings.SmtpServer.RangeList.RemoveAt(index);
        }
    }

    private void AddLocalRange()
    {
        if (!settings.SmtpServer.RangeList.Any(r => r.Address == "192.168.1.0/24"))
        {
            settings.SmtpServer.RangeList.Add(new SmtpRangeEntry
            {
                Address = "192.168.1.0/24"
            });
        }

        if (!settings.SmtpServer.RangeList.Any(r => r.Address == "127.0.0.1"))
        {
            settings.SmtpServer.RangeList.Add(new SmtpRangeEntry
            {
                Address = "127.0.0.1"
            });
        }

        saveMessage = "Local network ranges added. Click Save to apply.";
        saveSuccess = true;
    }

    private async Task SaveSettings()
    {
        try
        {
            await SettingsService.SaveSettingsAsync(settings);
            saveMessage = "Settings saved successfully!";
            saveSuccess = true;
        }
        catch (Exception ex)
        {
            saveMessage = $"Error saving settings: {ex.Message}";
            saveSuccess = false;
        }

        _ = Task.Delay(3000).ContinueWith(_ =>
        {
            saveMessage = null;
            InvokeAsync(StateHasChanged);
        });
    }
}
