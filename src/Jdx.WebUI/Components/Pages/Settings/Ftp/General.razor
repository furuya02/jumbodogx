@page "/settings/ftp/general"
@rendermode InteractiveServer
@using Jdx.Core.Settings
@using Jdx.WebUI.Services
@inject ISettingsService SettingsService

<PageTitle>FTP General Settings - JumboDogX</PageTitle>

<div class="page-container">
    <div class="page-header">
        <h1>FTP Server - General Settings</h1>
        <p class="subtitle">Configure FTP server connection and security settings</p>
    </div>

    @if (saveMessage != null)
    {
        <div class="alert-modern @(saveSuccess ? "alert-success" : "alert-danger") alert-dismissible fade show" role="alert">
            @saveMessage
            <button type="button" class="btn-close" @onclick="() => saveMessage = null"></button>
        </div>
    }

    <div class="row">
        <div class="col-md-10">
            <!-- Basic Settings -->
            <div class="settings-card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Basic Settings</h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" id="enabled"
                                       @bind="settings.FtpServer.Enabled">
                                <label class="form-check-label" for="enabled">
                                    Enable FTP Server
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label for="bindAddress" class="form-label">Bind Address</label>
                            <input type="text" class="form-control" id="bindAddress"
                                   @bind="settings.FtpServer.BindAddress" placeholder="0.0.0.0">
                            <div class="form-text">IP address to bind to (0.0.0.0 for all interfaces)</div>
                        </div>
                        <div class="col-md-6">
                            <label for="port" class="form-label">Port</label>
                            <input type="number" class="form-control" id="port"
                                   @bind="settings.FtpServer.Port" placeholder="2121">
                            <div class="form-text">Port number (default: 2121 for development)</div>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label for="timeOut" class="form-label">Timeout (seconds)</label>
                            <input type="number" class="form-control" id="timeOut"
                                   @bind="settings.FtpServer.TimeOut" placeholder="300">
                            <div class="form-text">Connection timeout in seconds</div>
                        </div>
                        <div class="col-md-6">
                            <label for="maxConnections" class="form-label">Max Connections</label>
                            <input type="number" class="form-control" id="maxConnections"
                                   @bind="settings.FtpServer.MaxConnections" placeholder="10">
                            <div class="form-text">Maximum simultaneous connections</div>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-12">
                            <label for="bannerMessage" class="form-label">Banner Message</label>
                            <input type="text" class="form-control" id="bannerMessage"
                                   @bind="settings.FtpServer.BannerMessage" placeholder="JumboDogX FTP Server Ready">
                            <div class="form-text">Welcome message displayed to clients</div>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" id="useSyst"
                                       @bind="settings.FtpServer.UseSyst">
                                <label class="form-check-label" for="useSyst">
                                    Enable SYST Command
                                </label>
                            </div>
                            <div class="form-text">Respond to SYST command with system information</div>
                        </div>
                        <div class="col-md-6">
                            <label for="reservationTime" class="form-label">PASV Reservation Time (seconds)</label>
                            <input type="number" class="form-control" id="reservationTime"
                                   @bind="settings.FtpServer.ReservationTime" placeholder="30">
                            <div class="form-text">PASV port reservation timeout</div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- FTPS Settings -->
            <div class="settings-card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">FTPS (FTP over SSL/TLS) Settings</h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger">
                        <strong>Security Warning:</strong> Certificate passwords are stored in plaintext in the configuration file.
                        For production use, consider using environment variables or ASP.NET Core User Secrets.
                        Example: <code>Environment.GetEnvironmentVariable("FTP_CERT_PASSWORD")</code>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" id="useFtps"
                                       @bind="settings.FtpServer.UseFtps">
                                <label class="form-check-label" for="useFtps">
                                    Enable FTPS
                                </label>
                            </div>
                            <div class="form-text">Enable FTP over SSL/TLS</div>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label for="certificateFile" class="form-label">Certificate File</label>
                            <input type="text" class="form-control" id="certificateFile"
                                   @bind="settings.FtpServer.CertificateFile" placeholder="/path/to/certificate.pfx">
                            <div class="form-text">Path to SSL certificate file (PFX format)</div>
                        </div>
                        <div class="col-md-6">
                            <label for="certificatePassword" class="form-label">Certificate Password</label>
                            <input type="password" class="form-control" id="certificatePassword"
                                   @bind="settings.FtpServer.CertificatePassword" placeholder="Enter password">
                            <div class="form-text">Password for the certificate file</div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Save Buttons -->
            <div class="border-top pt-3 mt-4">
                <button class="btn btn-dashboard btn-dashboard-primary btn-dashboard-lg me-2" @onclick="SaveSettings">
                    Save Settings
                </button>
                <button class="btn btn-dashboard btn-dashboard-outline btn-dashboard-lg" @onclick="ResetToDefault">
                    Reset to Default
                </button>
            </div>
        </div>
    </div>
</div>

@code {
    private ApplicationSettings settings = new();
    private string? saveMessage;
    private bool saveSuccess;

    protected override void OnInitialized()
    {
        settings = SettingsService.GetSettings();
    }

    private async Task SaveSettings()
    {
        try
        {
            await SettingsService.SaveSettingsAsync(settings);
            saveMessage = "FTP general settings saved successfully! Restart the server to apply changes.";
            saveSuccess = true;
        }
        catch (Exception ex)
        {
            saveMessage = $"Error saving settings: {ex.Message}";
            saveSuccess = false;
        }

        // Clear message after 5 seconds
        _ = Task.Delay(5000).ContinueWith(_ =>
        {
            saveMessage = null;
            InvokeAsync(StateHasChanged);
        });
    }

    private void ResetToDefault()
    {
        var defaults = SettingsService.GetDefaultSettings();

        // Reset FTP general settings to defaults
        settings.FtpServer.Enabled = defaults.FtpServer.Enabled;
        settings.FtpServer.BindAddress = defaults.FtpServer.BindAddress;
        settings.FtpServer.Port = defaults.FtpServer.Port;
        settings.FtpServer.TimeOut = defaults.FtpServer.TimeOut;
        settings.FtpServer.MaxConnections = defaults.FtpServer.MaxConnections;
        settings.FtpServer.BannerMessage = defaults.FtpServer.BannerMessage;
        settings.FtpServer.UseSyst = defaults.FtpServer.UseSyst;
        settings.FtpServer.ReservationTime = defaults.FtpServer.ReservationTime;
        settings.FtpServer.UseFtps = defaults.FtpServer.UseFtps;
        settings.FtpServer.CertificateFile = defaults.FtpServer.CertificateFile;
        settings.FtpServer.CertificatePassword = defaults.FtpServer.CertificatePassword;

        saveMessage = "FTP general settings reset to default values. Click 'Save Settings' to apply.";
        saveSuccess = true;
    }
}
