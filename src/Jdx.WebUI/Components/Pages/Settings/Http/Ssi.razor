@page "/settings/http/{vhostId?}/ssi"
@rendermode InteractiveServer
@using Jdx.Core.Settings
@using Jdx.WebUI.Services
@inject ISettingsService SettingsService

<PageTitle>HTTP SSI Settings - JumboDogX</PageTitle>

<div class="page-container">
    <!-- Header -->
    <div class="page-header">
        <h1>HTTP/HTTPS - SSI Settings@(isVirtualHost ? $" ({virtualHostName})" : "")</h1>
        <p class="subtitle">Configure Server Side Includes processing</p>
    </div>

    @if (saveMessage != null)
    {
        <div class="alert-modern @(saveSuccess ? "alert-success" : "alert-danger") alert-dismissible fade show" role="alert">
            @saveMessage
            <button type="button" class="btn-close" @onclick="() => saveMessage = null"></button>
        </div>
    }

    <div class="settings-card">
        <div class="card-header">
            <h5>Server Side Includes (SSI) Configuration</h5>
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-4">
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" id="useSsi"
                               @bind="UseSsi">
                        <label class="form-check-label" for="useSsi">
                            <strong>Enable SSI</strong>
                        </label>
                    </div>
                    <div class="form-text">Enable Server Side Includes processing</div>
                </div>
                <div class="col-md-4">
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" id="useExec"
                               @bind="UseExec">
                        <label class="form-check-label" for="useExec">
                            Allow SSI exec
                        </label>
                    </div>
                    <div class="form-text">Allow <!--#exec--> directive</div>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <label for="ssiExt" class="form-label">SSI Extensions</label>
                    <input type="text" class="form-control" id="ssiExt"
                           @bind="SsiExt" placeholder="html,htm,shtml">
                    <div class="form-text">Comma-separated list of file extensions to process</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Save Buttons -->
    <div class="settings-card">
        <div class="card-body">
            <button class="btn btn-dashboard btn-dashboard-primary btn-dashboard-lg me-2" @onclick="SaveSettings">
                Save Settings
            </button>
            <button class="btn btn-dashboard btn-dashboard-outline btn-dashboard-lg" @onclick="ResetToDefault">
                Reset to Default
            </button>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public string? VhostId { get; set; }

    private ApplicationSettings settings = new();
    private VirtualHostSettings currentVHostSettings = new();
    private string? saveMessage;
    private bool saveSuccess;
    private bool isVirtualHost => !string.IsNullOrEmpty(VhostId);
    private string virtualHostName = "";

    private bool UseSsi
    {
        get => isVirtualHost ? currentVHostSettings.UseSsi : settings.HttpServer.UseSsi;
        set
        {
            if (isVirtualHost)
                currentVHostSettings.UseSsi = value;
            else
                settings.HttpServer.UseSsi = value;
        }
    }

    private bool UseExec
    {
        get => isVirtualHost ? currentVHostSettings.UseExec : settings.HttpServer.UseExec;
        set
        {
            if (isVirtualHost)
                currentVHostSettings.UseExec = value;
            else
                settings.HttpServer.UseExec = value;
        }
    }

    private string SsiExt
    {
        get => isVirtualHost ? currentVHostSettings.SsiExt : settings.HttpServer.SsiExt;
        set
        {
            if (isVirtualHost)
                currentVHostSettings.SsiExt = value;
            else
                settings.HttpServer.SsiExt = value;
        }
    }

    protected override void OnInitialized()
    {
        settings = SettingsService.GetSettings();

        if (isVirtualHost && int.TryParse(VhostId, out var vhostIndex))
        {
            if (vhostIndex >= 0 && vhostIndex < settings.HttpServer.VirtualHosts.Count)
            {
                currentVHostSettings = settings.HttpServer.VirtualHosts[vhostIndex].Settings;
                virtualHostName = settings.HttpServer.VirtualHosts[vhostIndex].Host;
            }
        }
    }

    private async Task SaveSettings()
    {
        try
        {
            if (isVirtualHost && int.TryParse(VhostId, out var vhostIndex))
            {
                if (vhostIndex >= 0 && vhostIndex < settings.HttpServer.VirtualHosts.Count)
                {
                    settings.HttpServer.VirtualHosts[vhostIndex].Settings = currentVHostSettings;
                }
            }

            await SettingsService.SaveSettingsAsync(settings);
            saveMessage = "Settings saved successfully!";
            saveSuccess = true;
        }
        catch (Exception ex)
        {
            saveMessage = $"Error saving settings: {ex.Message}";
            saveSuccess = false;
        }

        _ = Task.Delay(3000).ContinueWith(_ =>
        {
            saveMessage = null;
            InvokeAsync(StateHasChanged);
        });
    }

    private void ResetToDefault()
    {
        if (isVirtualHost)
        {
            currentVHostSettings = SettingsService.GetDefaultVirtualHostSettings();
            saveMessage = "Settings reset to default values. Click Save to apply.";
        }
        else
        {
            var defaults = SettingsService.GetDefaultSettings();
            settings.HttpServer = defaults.HttpServer;
            saveMessage = "Settings reset to default values. Click Save to apply.";
        }
        saveSuccess = true;
    }
}
