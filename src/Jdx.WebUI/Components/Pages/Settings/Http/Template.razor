@page "/settings/http/{vhostId?}/template"
@rendermode InteractiveServer
@using Jdx.Core.Settings
@using Jdx.WebUI.Services
@inject ISettingsService SettingsService

<PageTitle>HTTP Template Settings - JumboDogX</PageTitle>

<div class="page-container">
    <!-- Header -->
    <div class="page-header">
        <h1>HTTP/HTTPS - Template Settings@(isVirtualHost ? $" ({virtualHostName})" : "")</h1>
        <p class="subtitle">Configure HTML templates for directory listings and error pages</p>
    </div>

    @if (saveMessage != null)
    {
        <div class="alert-modern @(saveSuccess ? "alert-success" : "alert-danger") alert-dismissible fade show" role="alert">
            @saveMessage
            <button type="button" class="btn-close" @onclick="() => saveMessage = null"></button>
        </div>
    }

    <div class="settings-card">
        <div class="card-header">
            <h5>Template Configuration</h5>
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-6">
                    <label for="encode" class="form-label">Character Encoding</label>
                    <input type="text" class="form-control" id="encode"
                           @bind="Encode" placeholder="UTF-8">
                    <div class="form-text">Default character encoding for responses</div>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-12">
                    <label for="indexDoc" class="form-label">Index Document Template</label>
                    <textarea class="form-control font-monospace" id="indexDoc" rows="4"
                              @bind="IndexDocument"></textarea>
                    <div class="form-text">HTML template for directory listings. Variables: $URI, $LIST</div>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-12">
                    <label for="errorDoc" class="form-label">Error Document Template</label>
                    <textarea class="form-control font-monospace" id="errorDoc" rows="4"
                              @bind="ErrorDocument"></textarea>
                    <div class="form-text">HTML template for error pages. Variables: $CODE, $MSG</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Save Buttons -->
    <div class="settings-card">
        <div class="card-body">
            <button class="btn btn-dashboard btn-dashboard-primary btn-dashboard-lg me-2" @onclick="SaveSettings">
                Save Settings
            </button>
            <button class="btn btn-dashboard btn-dashboard-outline btn-dashboard-lg" @onclick="ResetToDefault">
                Reset to Default
            </button>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public string? VhostId { get; set; }

    private ApplicationSettings settings = new();
    private VirtualHostSettings currentVHostSettings = new();
    private string? saveMessage;
    private bool saveSuccess;
    private bool isVirtualHost => !string.IsNullOrEmpty(VhostId);
    private string virtualHostName = "";

    private string Encode
    {
        get => isVirtualHost ? currentVHostSettings.Encode : settings.HttpServer.Encode;
        set
        {
            if (isVirtualHost)
                currentVHostSettings.Encode = value;
            else
                settings.HttpServer.Encode = value;
        }
    }

    private string IndexDocument
    {
        get => isVirtualHost ? currentVHostSettings.IndexDocument : settings.HttpServer.IndexDocument;
        set
        {
            if (isVirtualHost)
                currentVHostSettings.IndexDocument = value;
            else
                settings.HttpServer.IndexDocument = value;
        }
    }

    private string ErrorDocument
    {
        get => isVirtualHost ? currentVHostSettings.ErrorDocument : settings.HttpServer.ErrorDocument;
        set
        {
            if (isVirtualHost)
                currentVHostSettings.ErrorDocument = value;
            else
                settings.HttpServer.ErrorDocument = value;
        }
    }

    protected override void OnInitialized()
    {
        settings = SettingsService.GetSettings();

        if (isVirtualHost && int.TryParse(VhostId, out var vhostIndex))
        {
            if (vhostIndex >= 0 && vhostIndex < settings.HttpServer.VirtualHosts.Count)
            {
                currentVHostSettings = settings.HttpServer.VirtualHosts[vhostIndex].Settings;
                virtualHostName = settings.HttpServer.VirtualHosts[vhostIndex].Host;
            }
        }
    }

    private async Task SaveSettings()
    {
        try
        {
            if (isVirtualHost && int.TryParse(VhostId, out var vhostIndex))
            {
                if (vhostIndex >= 0 && vhostIndex < settings.HttpServer.VirtualHosts.Count)
                {
                    settings.HttpServer.VirtualHosts[vhostIndex].Settings = currentVHostSettings;
                }
            }

            await SettingsService.SaveSettingsAsync(settings);
            saveMessage = "Settings saved successfully!";
            saveSuccess = true;
        }
        catch (Exception ex)
        {
            saveMessage = $"Error saving settings: {ex.Message}";
            saveSuccess = false;
        }

        _ = Task.Delay(3000).ContinueWith(_ =>
        {
            saveMessage = null;
            InvokeAsync(StateHasChanged);
        });
    }

    private void ResetToDefault()
    {
        if (isVirtualHost)
        {
            currentVHostSettings = SettingsService.GetDefaultVirtualHostSettings();
            saveMessage = "Settings reset to default values. Click Save to apply.";
        }
        else
        {
            var defaults = SettingsService.GetDefaultSettings();
            settings.HttpServer = defaults.HttpServer;
            saveMessage = "Settings reset to default values. Click Save to apply.";
        }
        saveSuccess = true;
    }
}
