@page "/settings/http/{vhostId?}/cgi"
@rendermode InteractiveServer
@using Jdx.Core.Settings
@using Jdx.WebUI.Services
@inject ISettingsService SettingsService

<PageTitle>HTTP CGI Settings - JumboDogX</PageTitle>

<h1>HTTP/HTTPS - CGI Settings@(isVirtualHost ? $" ({virtualHostName})" : "")</h1>

@if (saveMessage != null)
{
    <div class="alert @(saveSuccess ? "alert-success" : "alert-danger") alert-dismissible fade show" role="alert">
        @saveMessage
        <button type="button" class="btn-close" @onclick="() => saveMessage = null"></button>
    </div>
}

<div class="row">
    <div class="col-md-10">
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0">⚙️ CGI Configuration</h5>
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-md-4">
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" id="useCgi"
                                   @bind="UseCgi">
                            <label class="form-check-label" for="useCgi">
                                <strong>Enable CGI</strong>
                            </label>
                        </div>
                        <div class="form-text">Enable Common Gateway Interface execution</div>
                    </div>
                    <div class="col-md-4">
                        <label for="cgiTimeout" class="form-label">CGI Timeout (seconds)</label>
                        <input type="number" class="form-control" id="cgiTimeout"
                               @bind="CgiTimeout" min="1" max="300">
                        <div class="form-text">Maximum CGI script execution time</div>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-12">
                        <h6>CGI Commands</h6>
                        <div class="alert alert-info">
                            <strong>Info:</strong> CGI command mappings (e.g., .cgi → /usr/bin/perl) can be configured here.
                            Advanced configuration UI will be added in future updates.
                        </div>
                        <p class="text-muted">
                            Current: @(isVirtualHost ? currentVHostSettings.CgiCommands.Count : settings.HttpServer.CgiCommands.Count) command(s) configured
                        </p>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-12">
                        <h6>CGI Paths</h6>
                        <div class="alert alert-info">
                            <strong>Info:</strong> CGI path mappings (e.g., /cgi-bin → /usr/local/cgi-bin) can be configured here.
                            Advanced configuration UI will be added in future updates.
                        </div>
                        <p class="text-muted">
                            Current: @(isVirtualHost ? currentVHostSettings.CgiPaths.Count : settings.HttpServer.CgiPaths.Count) path(s) configured
                        </p>
                    </div>
                </div>

                <div class="border-top pt-3 mt-4">
                    <button class="btn btn-primary me-2" @onclick="SaveSettings">
                        Save Settings
                    </button>
                    <button class="btn btn-secondary" @onclick="ResetToDefault">
                        Reset to Default
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public string? VhostId { get; set; }

    private ApplicationSettings settings = new();
    private VirtualHostSettings currentVHostSettings = new();
    private string? saveMessage;
    private bool saveSuccess;
    private bool isVirtualHost => !string.IsNullOrEmpty(VhostId);
    private string virtualHostName = "";

    private bool UseCgi
    {
        get => isVirtualHost ? currentVHostSettings.UseCgi : settings.HttpServer.UseCgi;
        set
        {
            if (isVirtualHost)
                currentVHostSettings.UseCgi = value;
            else
                settings.HttpServer.UseCgi = value;
        }
    }

    private int CgiTimeout
    {
        get => isVirtualHost ? currentVHostSettings.CgiTimeout : settings.HttpServer.CgiTimeout;
        set
        {
            if (isVirtualHost)
                currentVHostSettings.CgiTimeout = value;
            else
                settings.HttpServer.CgiTimeout = value;
        }
    }

    protected override void OnInitialized()
    {
        settings = SettingsService.GetSettings();

        if (isVirtualHost && int.TryParse(VhostId, out var vhostIndex))
        {
            if (vhostIndex >= 0 && vhostIndex < settings.HttpServer.VirtualHosts.Count)
            {
                currentVHostSettings = settings.HttpServer.VirtualHosts[vhostIndex].Settings;
                virtualHostName = settings.HttpServer.VirtualHosts[vhostIndex].Host;
            }
        }
    }

    private async Task SaveSettings()
    {
        try
        {
            if (isVirtualHost && int.TryParse(VhostId, out var vhostIndex))
            {
                if (vhostIndex >= 0 && vhostIndex < settings.HttpServer.VirtualHosts.Count)
                {
                    settings.HttpServer.VirtualHosts[vhostIndex].Settings = currentVHostSettings;
                }
            }

            await SettingsService.SaveSettingsAsync(settings);
            saveMessage = "Settings saved successfully!";
            saveSuccess = true;
        }
        catch (Exception ex)
        {
            saveMessage = $"Error saving settings: {ex.Message}";
            saveSuccess = false;
        }

        _ = Task.Delay(3000).ContinueWith(_ =>
        {
            saveMessage = null;
            InvokeAsync(StateHasChanged);
        });
    }

    private void ResetToDefault()
    {
        if (isVirtualHost)
        {
            currentVHostSettings = SettingsService.GetDefaultVirtualHostSettings();
            saveMessage = "Settings reset to default values. Click Save to apply.";
        }
        else
        {
            var defaults = SettingsService.GetDefaultSettings();
            settings.HttpServer = defaults.HttpServer;
            saveMessage = "Settings reset to default values. Click Save to apply.";
        }
        saveSuccess = true;
    }
}
