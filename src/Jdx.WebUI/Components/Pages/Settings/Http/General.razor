@page "/settings/http/general"
@rendermode InteractiveServer
@using Jdx.Core.Settings
@using Jdx.WebUI.Services
@inject ISettingsService SettingsService

<PageTitle>HTTP General Settings - JumboDogX</PageTitle>

<div class="page-container">
    <!-- Header -->
    <div class="page-header">
        <h1>HTTP/HTTPS - General Settings</h1>
        <p class="subtitle">Configure basic server settings and SSL/TLS options</p>
    </div>

    @if (saveMessage != null)
    {
        <div class="alert-modern @(saveSuccess ? "alert-success" : "alert-danger") alert-dismissible fade show" role="alert">
            @saveMessage
            <button type="button" class="btn-close" @onclick="() => saveMessage = null"></button>
        </div>
    }

    <!-- Basic Settings -->
    <div class="settings-card">
        <div class="card-header">
            <h5>Basic Settings</h5>
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-6">
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" id="enabled"
                               @bind="settings.HttpServer.Enabled">
                        <label class="form-check-label" for="enabled">
                            Enable Server
                        </label>
                    </div>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-6">
                    <label for="bindAddress" class="form-label">Bind Address</label>
                    <input type="text" class="form-control" id="bindAddress"
                           @bind="settings.HttpServer.BindAddress" placeholder="0.0.0.0">
                    <div class="form-text">IP address to bind to (0.0.0.0 for all interfaces)</div>
                </div>
                <div class="col-md-6">
                    <label for="port" class="form-label">Port</label>
                    <input type="number" class="form-control" id="port"
                           @bind="settings.HttpServer.Port" placeholder="8080">
                    <div class="form-text">Port number (default: 8080)</div>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-12">
                    <label for="documentRoot" class="form-label">Document Root</label>
                    <input type="text" class="form-control" id="documentRoot"
                           @bind="settings.HttpServer.DocumentRoot" placeholder="/var/www/html">
                    <div class="form-text">Root directory for serving files</div>
                </div>
            </div>
        </div>
    </div>

    <!-- SSL/TLS Settings -->
    <div class="settings-card">
        <div class="card-header">
            <h5>SSL/TLS Settings</h5>
        </div>
        <div class="card-body">
            <div class="alert-modern alert-danger mb-3">
                <strong>Security Warning:</strong> Certificate passwords are stored in plaintext in the configuration file.
                For production use, consider using environment variables or ASP.NET Core User Secrets.
                Example: <code>Environment.GetEnvironmentVariable("HTTP_CERT_PASSWORD")</code>
            </div>
            <div class="row mb-3">
                <div class="col-md-6">
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" id="enableHttps"
                               checked="@enableHttps" @onchange="OnEnableHttpsChanged">
                        <label class="form-check-label" for="enableHttps">
                            Enable HTTPS
                        </label>
                    </div>
                    <div class="form-text">Enable HTTP over SSL/TLS</div>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-6">
                    <label for="certificateFile" class="form-label">Certificate File (optional)</label>
                    <input type="text" class="form-control" id="certificateFile"
                           @bind="settings.HttpServer.CertificateFile" placeholder="/path/to/certificate.pfx">
                    <div class="form-text">Path to SSL certificate file (PFX format)</div>
                </div>
                <div class="col-md-6">
                    <label for="certificatePassword" class="form-label">Certificate Password (optional)</label>
                    <input type="password" class="form-control" id="certificatePassword"
                           @bind="settings.HttpServer.CertificatePassword" placeholder="Enter password">
                    <div class="form-text">Password for the certificate file</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Save Buttons -->
    <div class="settings-card">
        <div class="card-body">
            <button class="btn btn-dashboard btn-dashboard-primary btn-dashboard-lg me-2" @onclick="SaveSettings">
                Save Settings
            </button>
            <button class="btn btn-dashboard btn-dashboard-outline btn-dashboard-lg" @onclick="ResetToDefault">
                Reset to Default
            </button>
        </div>
    </div>
</div>

@code {
    private ApplicationSettings settings = new();
    private string? saveMessage;
    private bool saveSuccess;
    private bool enableHttps;

    protected override void OnInitialized()
    {
        settings = SettingsService.GetSettings();
        enableHttps = settings.HttpServer.Protocol == "HTTPS";
    }

    private void OnEnableHttpsChanged(ChangeEventArgs e)
    {
        enableHttps = (bool)(e.Value ?? false);
        settings.HttpServer.Protocol = enableHttps ? "HTTPS" : "HTTP";
    }

    private async Task SaveSettings()
    {
        try
        {
            await SettingsService.SaveSettingsAsync(settings);
            saveMessage = "HTTP general settings saved successfully! Restart the server to apply changes.";
            saveSuccess = true;
        }
        catch (Exception ex)
        {
            saveMessage = $"Error saving settings: {ex.Message}";
            saveSuccess = false;
        }

        // Clear message after 5 seconds
        _ = Task.Delay(5000).ContinueWith(_ =>
        {
            saveMessage = null;
            InvokeAsync(StateHasChanged);
        });
    }

    private void ResetToDefault()
    {
        var defaults = SettingsService.GetDefaultSettings();

        // Reset HTTP general settings to defaults
        settings.HttpServer.Enabled = defaults.HttpServer.Enabled;
        settings.HttpServer.BindAddress = defaults.HttpServer.BindAddress;
        settings.HttpServer.Port = defaults.HttpServer.Port;
        settings.HttpServer.DocumentRoot = defaults.HttpServer.DocumentRoot;
        settings.HttpServer.Protocol = defaults.HttpServer.Protocol;
        settings.HttpServer.CertificateFile = defaults.HttpServer.CertificateFile;
        settings.HttpServer.CertificatePassword = defaults.HttpServer.CertificatePassword;

        enableHttps = settings.HttpServer.Protocol == "HTTPS";

        saveMessage = "HTTP general settings reset to default values. Click 'Save Settings' to apply.";
        saveSuccess = true;
    }
}
