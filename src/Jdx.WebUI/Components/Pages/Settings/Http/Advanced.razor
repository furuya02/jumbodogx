@page "/settings/http/{vhostId?}/advanced"
@rendermode InteractiveServer
@using Jdx.Core.Settings
@using Jdx.WebUI.Services
@inject ISettingsService SettingsService

<PageTitle>HTTP Advanced Settings - JumboDogX</PageTitle>

<h1>HTTP/HTTPS - Advanced Settings@(isVirtualHost ? $" ({virtualHostName})" : "")</h1>

@if (saveMessage != null)
{
    <div class="alert @(saveSuccess ? "alert-success" : "alert-danger") alert-dismissible fade show" role="alert">
        @saveMessage
        <button type="button" class="btn-close" @onclick="() => saveMessage = null"></button>
    </div>
}

<div class="row">
    <div class="col-md-10">
        <!-- Keep-Alive Settings -->
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0">üîÑ Keep-Alive Settings</h5>
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-md-3">
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" id="useKeepAlive"
                                   @bind="UseKeepAlive">
                            <label class="form-check-label" for="useKeepAlive">
                                <strong>Enable Keep-Alive</strong>
                            </label>
                        </div>
                        <div class="form-text">HTTP/1.1 persistent connections</div>
                    </div>
                    <div class="col-md-3">
                        <label for="keepAliveTimeout" class="form-label">Timeout (seconds)</label>
                        <input type="number" class="form-control" id="keepAliveTimeout"
                               @bind="KeepAliveTimeout" min="1" max="300">
                        <div class="form-text">Keep-alive timeout</div>
                    </div>
                    <div class="col-md-3">
                        <label for="maxKeepAliveRequests" class="form-label">Max Requests</label>
                        <input type="number" class="form-control" id="maxKeepAliveRequests"
                               @bind="MaxKeepAliveRequests" min="1" max="1000">
                        <div class="form-text">Max requests per connection</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Range Requests Settings -->
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0">üì¶ Range Requests & Apache Killer Protection</h5>
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-md-4">
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" id="useRangeRequests"
                                   @bind="UseRangeRequests">
                            <label class="form-check-label" for="useRangeRequests">
                                <strong>Enable Range Requests</strong>
                            </label>
                        </div>
                        <div class="form-text">Support partial content (206 responses)</div>
                    </div>
                    <div class="col-md-4">
                        <label for="maxRangeCount" class="form-label">Max Range Count</label>
                        <input type="number" class="form-control" id="maxRangeCount"
                               @bind="MaxRangeCount" min="1" max="100">
                        <div class="form-text">Apache Killer attack protection</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Auto ACL Settings -->
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0">üõ°Ô∏è Attack Detection & Auto ACL</h5>
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" id="useAutoAcl"
                                   @bind="UseAutoAcl">
                            <label class="form-check-label" for="useAutoAcl">
                                <strong>Enable Auto ACL</strong>
                            </label>
                        </div>
                        <div class="form-text">Automatically detect and block attacks</div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" id="autoAclApacheKiller"
                                   @bind="AutoAclApacheKiller">
                            <label class="form-check-label" for="autoAclApacheKiller">
                                <strong>Apache Killer Detection</strong>
                            </label>
                        </div>
                        <div class="form-text">Detect Apache Killer (Range attack) patterns</div>
                    </div>
                </div>
                <div class="alert alert-info">
                    <strong>‚ÑπÔ∏è Info:</strong> AttackDb monitors failed access attempts in a 120-second time window.
                    After detecting suspicious activity, the IP will be logged.
                    Automatic ACL addition requires configuration file write permissions.
                </div>
            </div>
        </div>

        <!-- Save Buttons -->
        <div class="card mb-4">
            <div class="card-body">
                <button class="btn btn-primary btn-lg me-2" @onclick="SaveSettings">
                    <span class="bi bi-check-circle me-1"></span> Save All Settings
                </button>
                <button class="btn btn-secondary btn-lg" @onclick="ResetToDefault">
                    <span class="bi bi-arrow-counterclockwise me-1"></span> Reset to Default
                </button>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public string? VhostId { get; set; }

    private ApplicationSettings settings = new();
    private VirtualHostSettings currentVHostSettings = new();
    private string? saveMessage;
    private bool saveSuccess;
    private bool isVirtualHost => !string.IsNullOrEmpty(VhostId);
    private string virtualHostName = "";

    private bool UseKeepAlive
    {
        get => isVirtualHost ? currentVHostSettings.UseKeepAlive : settings.HttpServer.UseKeepAlive;
        set
        {
            if (isVirtualHost)
                currentVHostSettings.UseKeepAlive = value;
            else
                settings.HttpServer.UseKeepAlive = value;
        }
    }

    private int KeepAliveTimeout
    {
        get => isVirtualHost ? currentVHostSettings.KeepAliveTimeout : settings.HttpServer.KeepAliveTimeout;
        set
        {
            if (isVirtualHost)
                currentVHostSettings.KeepAliveTimeout = value;
            else
                settings.HttpServer.KeepAliveTimeout = value;
        }
    }

    private int MaxKeepAliveRequests
    {
        get => isVirtualHost ? currentVHostSettings.MaxKeepAliveRequests : settings.HttpServer.MaxKeepAliveRequests;
        set
        {
            if (isVirtualHost)
                currentVHostSettings.MaxKeepAliveRequests = value;
            else
                settings.HttpServer.MaxKeepAliveRequests = value;
        }
    }

    private bool UseRangeRequests
    {
        get => isVirtualHost ? currentVHostSettings.UseRangeRequests : settings.HttpServer.UseRangeRequests;
        set
        {
            if (isVirtualHost)
                currentVHostSettings.UseRangeRequests = value;
            else
                settings.HttpServer.UseRangeRequests = value;
        }
    }

    private int MaxRangeCount
    {
        get => isVirtualHost ? currentVHostSettings.MaxRangeCount : settings.HttpServer.MaxRangeCount;
        set
        {
            if (isVirtualHost)
                currentVHostSettings.MaxRangeCount = value;
            else
                settings.HttpServer.MaxRangeCount = value;
        }
    }

    private bool UseAutoAcl
    {
        get => isVirtualHost ? currentVHostSettings.UseAutoAcl : settings.HttpServer.UseAutoAcl;
        set
        {
            if (isVirtualHost)
                currentVHostSettings.UseAutoAcl = value;
            else
                settings.HttpServer.UseAutoAcl = value;
        }
    }

    private bool AutoAclApacheKiller
    {
        get => isVirtualHost ? currentVHostSettings.AutoAclApacheKiller : settings.HttpServer.AutoAclApacheKiller;
        set
        {
            if (isVirtualHost)
                currentVHostSettings.AutoAclApacheKiller = value;
            else
                settings.HttpServer.AutoAclApacheKiller = value;
        }
    }

    protected override void OnInitialized()
    {
        settings = SettingsService.GetSettings();

        if (isVirtualHost && int.TryParse(VhostId, out var vhostIndex))
        {
            if (vhostIndex >= 0 && vhostIndex < settings.HttpServer.VirtualHosts.Count)
            {
                currentVHostSettings = settings.HttpServer.VirtualHosts[vhostIndex].Settings;
                virtualHostName = settings.HttpServer.VirtualHosts[vhostIndex].Host;
            }
        }
    }

    private async Task SaveSettings()
    {
        try
        {
            if (isVirtualHost && int.TryParse(VhostId, out var vhostIndex))
            {
                if (vhostIndex >= 0 && vhostIndex < settings.HttpServer.VirtualHosts.Count)
                {
                    settings.HttpServer.VirtualHosts[vhostIndex].Settings = currentVHostSettings;
                }
            }

            await SettingsService.SaveSettingsAsync(settings);
            saveMessage = "Settings saved successfully!";
            saveSuccess = true;
        }
        catch (Exception ex)
        {
            saveMessage = $"Error saving settings: {ex.Message}";
            saveSuccess = false;
        }

        _ = Task.Delay(3000).ContinueWith(_ =>
        {
            saveMessage = null;
            InvokeAsync(StateHasChanged);
        });
    }

    private void ResetToDefault()
    {
        if (isVirtualHost)
        {
            currentVHostSettings = SettingsService.GetDefaultVirtualHostSettings();
            saveMessage = "Settings reset to default values. Click Save to apply.";
        }
        else
        {
            var defaults = SettingsService.GetDefaultSettings();
            settings.HttpServer = defaults.HttpServer;
            saveMessage = "Settings reset to default values. Click Save to apply.";
        }
        saveSuccess = true;
    }
}
