@page "/settings/http/{vhostId?}/ssl"
@rendermode InteractiveServer
@using Jdx.Core.Settings
@using Jdx.WebUI.Services
@inject ISettingsService SettingsService

<PageTitle>HTTP SSL/TLS Settings - JumboDogX</PageTitle>

<h1>HTTP/HTTPS - SSL/TLS@(isVirtualHost ? $" ({virtualHostName})" : "")</h1>

@if (saveMessage != null)
{
    <div class="alert @(saveSuccess ? "alert-success" : "alert-danger") alert-dismissible fade show" role="alert">
        @saveMessage
        <button type="button" class="btn-close" @onclick="() => saveMessage = null"></button>
    </div>
}

<div class="row">
    <div class="col-md-10">
        <!-- SSL/TLS Settings -->
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0">üîí SSL/TLS Settings</h5>
            </div>
            <div class="card-body">
                <div class="alert alert-warning">
                    <strong>‚ö†Ô∏è SSL/TLS Status:</strong> Infrastructure is implemented but not yet fully integrated.
                    Certificate loading works, but actual SSL/TLS communication requires ServerTcpListener modifications.
                    Currently, only HTTP communication is supported.
                </div>
                <div class="alert alert-danger">
                    <strong>üîí Security Warning:</strong> Certificate passwords are stored in plaintext in the configuration file.
                    For production use, consider using environment variables or ASP.NET Core User Secrets.
                    Example: <code>Environment.GetEnvironmentVariable("CERT_PASSWORD")</code>
                </div>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label for="certificateFile" class="form-label">Certificate File</label>
                        <input type="text" class="form-control" id="certificateFile"
                               @bind="CertificateFile" placeholder="/path/to/certificate.pfx">
                        <div class="form-text">Path to SSL certificate file (PFX format)</div>
                    </div>
                    <div class="col-md-6">
                        <label for="certificatePassword" class="form-label">Certificate Password</label>
                        <input type="password" class="form-control" id="certificatePassword"
                               @bind="CertificatePassword" placeholder="Enter password">
                        <div class="form-text">Password for the certificate file</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Save Buttons -->
        <div class="card mb-4">
            <div class="card-body">
                <button class="btn btn-primary btn-lg me-2" @onclick="SaveSettings">
                    <span class="bi bi-check-circle me-1"></span> Save Settings
                </button>
                <button class="btn btn-secondary btn-lg" @onclick="ResetToDefault">
                    <span class="bi bi-arrow-counterclockwise me-1"></span> Reset to Default
                </button>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public string? VhostId { get; set; }

    private ApplicationSettings settings = new();
    private VirtualHostSettings currentVHostSettings = new();
    private string? saveMessage;
    private bool saveSuccess;
    private bool isVirtualHost => !string.IsNullOrEmpty(VhostId);
    private string virtualHostName = "";

    private string CertificateFile
    {
        get => isVirtualHost ? currentVHostSettings.CertificateFile : settings.HttpServer.CertificateFile;
        set
        {
            if (isVirtualHost)
                currentVHostSettings.CertificateFile = value;
            else
                settings.HttpServer.CertificateFile = value;
        }
    }

    private string CertificatePassword
    {
        get => isVirtualHost ? currentVHostSettings.CertificatePassword : settings.HttpServer.CertificatePassword;
        set
        {
            if (isVirtualHost)
                currentVHostSettings.CertificatePassword = value;
            else
                settings.HttpServer.CertificatePassword = value;
        }
    }

    protected override void OnInitialized()
    {
        settings = SettingsService.GetSettings();

        if (isVirtualHost && int.TryParse(VhostId, out var vhostIndex))
        {
            if (vhostIndex >= 0 && vhostIndex < settings.HttpServer.VirtualHosts.Count)
            {
                currentVHostSettings = settings.HttpServer.VirtualHosts[vhostIndex].Settings;
                virtualHostName = settings.HttpServer.VirtualHosts[vhostIndex].Host;
            }
        }
    }

    private async Task SaveSettings()
    {
        try
        {
            if (isVirtualHost && int.TryParse(VhostId, out var vhostIndex))
            {
                if (vhostIndex >= 0 && vhostIndex < settings.HttpServer.VirtualHosts.Count)
                {
                    settings.HttpServer.VirtualHosts[vhostIndex].Settings = currentVHostSettings;
                }
            }

            await SettingsService.SaveSettingsAsync(settings);
            saveMessage = "Settings saved successfully!";
            saveSuccess = true;
        }
        catch (Exception ex)
        {
            saveMessage = $"Error saving settings: {ex.Message}";
            saveSuccess = false;
        }

        _ = Task.Delay(3000).ContinueWith(_ =>
        {
            saveMessage = null;
            InvokeAsync(StateHasChanged);
        });
    }

    private void ResetToDefault()
    {
        if (isVirtualHost)
        {
            currentVHostSettings = SettingsService.GetDefaultVirtualHostSettings();
            saveMessage = "Settings reset to default values. Click Save to apply.";
        }
        else
        {
            var defaults = SettingsService.GetDefaultSettings();
            settings.HttpServer = defaults.HttpServer;
            saveMessage = "Settings reset to default values. Click Save to apply.";
        }
        saveSuccess = true;
    }
}
