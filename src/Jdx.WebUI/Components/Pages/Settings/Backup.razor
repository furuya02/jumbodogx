@page "/settings/backup"
@using Jdx.Core.Settings
@rendermode InteractiveServer
@inject ISettingsService SettingsService
@inject IJSRuntime JS

<div class="page-container">
    <div class="page-header">
        <h1>Settings Backup / Restore</h1>
        <p class="subtitle">Export and import your JumboDogX configuration settings</p>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="settings-card">
                <div class="card-header">
                    <h5 class="mb-0">Backup and Restore Configuration</h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <strong>Security Warning</strong>
                        <p class="mb-0 mt-2">
                            Exported files contain passwords, certificate passwords, and other sensitive information.
                            Keep exported files in a secure location and do not share with third parties.
                        </p>
                    </div>
                    <p class="text-muted">
                        Export your current settings in JSON format or import previously exported settings to restore your configuration.
                    </p>

                    <!-- Export Section -->
                    <div class="mb-4">
                        <h5>Export Settings</h5>
                        <p class="text-sm text-muted">Download current settings in JSON format.</p>
                        <button class="btn btn-dashboard btn-dashboard-primary btn-dashboard-lg" @onclick="ExportSettings" disabled="@isProcessing">
                            <span class="bi bi-download me-2"></span>
                            Export Settings
                        </button>
                    </div>

                    <hr />

                    <!-- Import Section -->
                    <div class="mb-4">
                        <h5>Import Settings</h5>
                        <p class="text-sm text-muted">Select and upload a previously exported settings file.</p>
                        <div class="mb-3">
                            <InputFile OnChange="OnFileSelected" class="form-control" accept=".json" disabled="@isProcessing" />
                        </div>
                        <button class="btn btn-dashboard btn-dashboard-primary btn-dashboard-lg" @onclick="ImportSettings" disabled="@(selectedFile == null || isProcessing)">
                            <span class="bi bi-upload me-2"></span>
                            Import Settings
                        </button>
                    </div>

                    @if (!string.IsNullOrEmpty(message))
                    {
                        <div class="alert-modern @(isError ? "alert-danger" : "alert-success") alert-dismissible fade show mt-3" role="alert">
                            @message
                            <button type="button" class="btn-close" @onclick="ClearMessage"></button>
                        </div>
                    }

                    @if (isProcessing)
                    {
                        <div class="text-center mt-3">
                            <div class="spinner-border text-primary" role="status">
                                <span class="visually-hidden">Processing...</span>
                            </div>
                            <p class="mt-2">Processing...</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private IBrowserFile? selectedFile;
    private string? message;
    private bool isError;
    private bool isProcessing;

    private async Task ExportSettings()
    {
        try
        {
            isProcessing = true;
            message = null;
            StateHasChanged();

            var json = await SettingsService.ExportSettingsAsync();
            var fileName = $"jumbodogx-settings-{DateTime.Now:yyyyMMdd-HHmmss}.json";

            // JavaScriptを使用してファイルをダウンロード
            await JS.InvokeVoidAsync("downloadFile", fileName, json);

            message = "Settings export completed successfully.";
            isError = false;
        }
        catch (Exception ex)
        {
            message = $"Export error: {ex.Message}";
            isError = true;
        }
        finally
        {
            isProcessing = false;
        }
    }

    private void OnFileSelected(InputFileChangeEventArgs e)
    {
        selectedFile = e.File;
        message = null;
    }

    private async Task ImportSettings()
    {
        if (selectedFile == null)
        {
            return;
        }

        try
        {
            isProcessing = true;
            message = null;
            StateHasChanged();

            // ファイルサイズチェック (10MB以下)
            if (selectedFile.Size > 10 * 1024 * 1024)
            {
                message = "File size is too large (max 10MB).";
                isError = true;
                return;
            }

            // ファイルの内容を読み取る
            using var stream = selectedFile.OpenReadStream(maxAllowedSize: 10 * 1024 * 1024);
            using var reader = new StreamReader(stream);
            var json = await reader.ReadToEndAsync();

            // 設定をインポート
            await SettingsService.ImportSettingsAsync(json);

            message = "Settings import completed successfully. Please restart the application to apply changes.";
            isError = false;
            selectedFile = null;
        }
        catch (ArgumentException ex)
        {
            message = $"Import error: {ex.Message}";
            isError = true;
        }
        catch (Exception ex)
        {
            message = $"Unexpected error: {ex.Message}";
            isError = true;
        }
        finally
        {
            isProcessing = false;
        }
    }

    private void ClearMessage()
    {
        message = null;
    }
}
