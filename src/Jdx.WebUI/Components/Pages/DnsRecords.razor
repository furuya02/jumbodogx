@page "/dns"
@rendermode InteractiveServer
@using Jdx.WebUI.Services
@using Jdx.Servers.Dns
@inject ServerManager ServerManager

<PageTitle>DNS Records - JumboDogX</PageTitle>

<h1>DNS Records Management</h1>

@if (dnsServer == null)
{
    <div class="alert alert-warning">
        <strong>DNS Server not available.</strong> Make sure the DNS server is initialized.
    </div>
}
else
{
    <div class="row">
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">â• Add DNS Record</h5>
                </div>
                <div class="card-body">
                    <EditForm Model="@newRecord" OnValidSubmit="AddRecord">
                        <div class="mb-3">
                            <label for="domainName" class="form-label">Domain Name</label>
                            <InputText id="domainName" class="form-control" @bind-Value="newRecord.DomainName" placeholder="example.com" />
                        </div>
                        <div class="mb-3">
                            <label for="ipAddress" class="form-label">IP Address</label>
                            <InputText id="ipAddress" class="form-control" @bind-Value="newRecord.IpAddress" placeholder="192.168.1.1" />
                        </div>
                        @if (errorMessage != null)
                        {
                            <div class="alert alert-danger">@errorMessage</div>
                        }
                        @if (successMessage != null)
                        {
                            <div class="alert alert-success">@successMessage</div>
                        }
                        <button type="submit" class="btn btn-primary">Add Record</button>
                    </EditForm>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">ğŸ“‹ Current DNS Records</h5>
                </div>
                <div class="card-body">
                    @if (!records.Any())
                    {
                        <p class="text-muted">No DNS records configured.</p>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-sm table-hover mb-0">
                                <thead>
                                    <tr>
                                        <th>Domain Name</th>
                                        <th>IP Address</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var record in records.OrderBy(r => r.Key))
                                    {
                                        <tr>
                                            <td>@record.Key</td>
                                            <td><code>@record.Value</code></td>
                                            <td>
                                                <button class="btn btn-sm btn-danger" @onclick="() => RemoveRecord(record.Key)">
                                                    ğŸ—‘ï¸ Delete
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-header bg-secondary text-white">
            <h5 class="mb-0">â„¹ï¸ Testing Instructions</h5>
        </div>
        <div class="card-body">
            <p>Use the <code>dig</code> command to test DNS records:</p>
            <pre class="bg-light p-3 rounded"><code>dig @@127.0.0.1 -p 5300 &lt;domain&gt; +short</code></pre>
            <p class="mb-0"><strong>Example:</strong></p>
            <pre class="bg-light p-3 rounded mb-0"><code>dig @@127.0.0.1 -p 5300 example.com +short
# Expected output: 192.0.2.1</code></pre>
        </div>
    </div>
}

@code {
    private DnsServer? dnsServer;
    private Dictionary<string, string> records = new();
    private DnsRecordModel newRecord = new();
    private string? errorMessage;
    private string? successMessage;

    protected override void OnInitialized()
    {
        dnsServer = ServerManager.GetDnsServer();
        LoadRecords();
    }

    private void LoadRecords()
    {
        if (dnsServer == null) return;

        // DNS ã‚µãƒ¼ãƒãƒ¼ã‹ã‚‰ç¾åœ¨ã®ãƒ¬ã‚³ãƒ¼ãƒ‰ã‚’å–å¾—
        // æ³¨æ„: å®Ÿéš›ã®å®Ÿè£…ã§ã¯ DnsServer ã«ãƒ¬ã‚³ãƒ¼ãƒ‰ä¸€è¦§å–å¾—ãƒ¡ã‚½ãƒƒãƒ‰ãŒå¿…è¦
        // ã“ã“ã§ã¯æ—¢çŸ¥ã®ãƒ†ã‚¹ãƒˆãƒ¬ã‚³ãƒ¼ãƒ‰ã‚’è¡¨ç¤º
        records = new Dictionary<string, string>
        {
            ["example.com"] = "192.0.2.1",
            ["jdx.local"] = "127.0.0.1",
            ["test.local"] = "192.168.1.100"
        };
    }

    private void AddRecord()
    {
        errorMessage = null;
        successMessage = null;

        if (string.IsNullOrWhiteSpace(newRecord.DomainName))
        {
            errorMessage = "Domain name is required.";
            return;
        }

        if (string.IsNullOrWhiteSpace(newRecord.IpAddress))
        {
            errorMessage = "IP address is required.";
            return;
        }

        // ç°¡æ˜“çš„ãªIPã‚¢ãƒ‰ãƒ¬ã‚¹å½¢å¼ãƒã‚§ãƒƒã‚¯
        if (!System.Net.IPAddress.TryParse(newRecord.IpAddress, out _))
        {
            errorMessage = "Invalid IP address format.";
            return;
        }

        try
        {
            dnsServer?.AddRecord(newRecord.DomainName, newRecord.IpAddress);
            records[newRecord.DomainName] = newRecord.IpAddress;
            successMessage = $"Record added: {newRecord.DomainName} â†’ {newRecord.IpAddress}";
            newRecord = new DnsRecordModel();
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to add record: {ex.Message}";
        }
    }

    private void RemoveRecord(string domainName)
    {
        errorMessage = null;
        successMessage = null;

        try
        {
            dnsServer?.RemoveRecord(domainName);
            records.Remove(domainName);
            successMessage = $"Record removed: {domainName}";
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to remove record: {ex.Message}";
        }
    }

    private class DnsRecordModel
    {
        public string DomainName { get; set; } = "";
        public string IpAddress { get; set; } = "";
    }
}
